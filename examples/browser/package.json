{
  "private": true,
  "name": "@theia/swiftlatex",
  "version": "0.15.0",
  "license": "EPL-2.0 OR GPL-2.0 WITH Classpath-exception-2.0",
  "theia": {
    "frontend": {
      "config": {
        "applicationName": "SwiftLaTeX editor",
        "preferences": {
          "files.enableTrash": false
        }
      }
    }
  },
  "dependencies": {
    "@theia/core": "^0.15.0",
    "@theia/editor": "^0.15.0",
    "@theia/filesystem": "^0.15.0",
    "@theia/languages": "^0.15.0",
    "@theia/markers": "^0.15.0",
    "@theia/messages": "^0.15.0",
    "@theia/monaco": "^0.15.0",
    "@theia/navigator": "^0.15.0",
    "@theia/preferences": "^0.15.0",
    "@theia/textmate-grammars": "^0.15.0",
    "@theia/workspace": "^0.15.0",
    "@theia/mini-browser": "^0.15.0",
    "@theia/latex": "0.0.0"
  },
  "scripts": {
    "prepare": "yarn run clean && yarn build",
    "clean": "theia clean && rimraf errorShots",
    "build": "theiaext compile && theia build --mode development",
    "watch": "concurrently -n compile,bundle \"theiaext watch --preserveWatchOutput\" \"theia build --watch --mode development\"",
    "start": "theia start",
    "start:debug": "yarn start --log-level=debug",
    "test": "theia test . --test-spec=../api-tests/**/*.spec.js",
    "test:debug": "yarn test --test-inspect",
    "coverage": "yarn test --test-coverage && yarn coverage:report",
    "coverage:report": "nyc report --reporter=html",
    "coverage:clean": "rimraf .nyc_output && rimraf coverage"
  },
  "devDependencies": {
    "@theia/cli": "^0.15.0"
  }
}
