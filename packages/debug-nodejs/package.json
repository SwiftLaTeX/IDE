{
  "name": "@theia/debug-nodejs",
  "version": "0.15.0",
  "description": "Theia - NodeJS Debug Extension",
  "dependencies": {
    "@theia/debug": "^0.15.0",
    "ps-list": "5.0.1",
    "vscode-debugprotocol": "^1.32.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "theiaExtensions": [
    {
      "backend": "lib/node/debug-nodejs-backend-module"
    }
  ],
  "keywords": [
    "theia-extension",
    "debug",
    "nodejs"
  ],
  "license": "EPL-2.0 OR GPL-2.0 WITH Classpath-exception-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/eclipse-theia/theia.git"
  },
  "bugs": {
    "url": "https://github.com/eclipse-theia/theia/issues"
  },
  "homepage": "https://github.com/eclipse-theia/theia",
  "files": [
    "lib",
    "src",
    "scripts"
  ],
  "scripts": {
    "postinstall": "download-debug-adapters",
    "lint": "theiaext lint",
    "build": "theiaext build",
    "watch": "theiaext watch",
    "clean": "theiaext clean",
    "test": "theiaext test"
  },
  "devDependencies": {
    "@theia/ext-scripts": "^0.15.0"
  },
  "nyc": {
    "extends": "../../configs/nyc.json"
  },
  "adapters": {
    "node-debug": "https://github.com/theia-ide/vscode-node-debug/releases/download/v1.35.3/node-debug-1.35.3.vsix",
    "node-debug2": "https://github.com/theia-ide/vscode-node-debug2/releases/download/v1.33.0/node-debug2-1.33.0.vsix"
  }
}
